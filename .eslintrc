{
  "root": true,
  "env": {
    "browser": true,
    "es6": true,
    "commonjs": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 9,
    "ecmaFeatures": {
      "legacyDecorators": true,
      "experimentalObjectRestSpread": true
    },
    "sourceType": "module"
  },
  "extends": [
    "eslint:recommended",
    "standard"
  ],
  "rules": {
    "no-undef": 0,
    "space-before-function-paren": [
      "error",
      "never"
    ],
    "indent": [
      "error",
      2
    ],
    "experimentalDecorators": true,
    "import/first": 0,
    "no-extra-semi": "error",
    "no-debugger": 0,
    "no-console": 1,
    "no-unused-vars": 1
  }
}
